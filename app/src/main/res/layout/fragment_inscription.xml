<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_top"
    tools:context=".InscriptionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textSize="@dimen/dim_title"
        android:gravity="center"
        android:textStyle="bold"
    />

    <EditText
        android:id="@+id/txtFirstName"
        android:layout_marginTop="@dimen/dim_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/firstname"
    />

    <EditText
        android:id="@+id/txtLastName"
        android:layout_marginTop="@dimen/dim_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lastname"
    />

    <TextView
        android:layout_marginTop="@dimen/dim_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/degrees"
        android:textSize="@dimen/dim_title"
    />

    <CheckBox
        android:id="@+id/cbOLevel"
        android:layout_marginLeft="@dimen/dim_degrees"
        android:layout_marginTop="@dimen/dim_top"
        android:text="@string/o_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cbBachelor"
        android:layout_marginLeft="@dimen/dim_degrees"
        android:layout_marginTop="@dimen/dim_top"
        android:text="@string/o_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cbMaster"
        android:layout_marginLeft="@dimen/dim_degrees"
        android:layout_marginTop="@dimen/dim_top"
        android:text="@string/o_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_marginTop="@dimen/dim_top"
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>